<div class="row">
  <div class="col-md-6 col-md-offset-3 border_forms">
    <h2>Editing Post</h2>
    <% @c_post = Post.find(params[:id]) %>
    <%= form_with(model: @c_post, local: true) do |f| %>

      <div class="field">
        <h4>Titulo:</h4>
        <%= f.text_area :title , class: 'form-control' %>
      </div>
      <div class="field">
        <h4>Contenido:</h4>
        <%= f.text_area :content , class: 'form-control'%>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>

    <% end %>

    <%= link_to 'Back', @c_post.tema, class: "btn btn-info" %>
  </div>
</div>
