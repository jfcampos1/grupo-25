<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <img src=<%=profile_picture(@user)%> class = "user-image">
      <h1></h1>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>

      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <div class="multiimage">
        <% @users.each do |user| %>
          <%= link_to user do %>
            <div class = "block">
              <img src=<%=profile_picture(user)%> class = "user-image">
              <h4><%= user.name %></h4>
              <% if current_user && current_user.role == "admin" %>
                <p><%= user.role %></p>
              <%end%>
            </div>
          <% end %>

        <% end %>
      </div>
    <% end %>
  </div>
</div>
