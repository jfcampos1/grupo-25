<div class="row">
  <div class="col-md-6 col-md-offset-3 border_forms">
    <h1>Editing Tema</h1>
      <%= form_with(model: @tema, local: true) do |f| %>
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, id: :tema_name , class: 'form-control'%>
        </div>

        <div class="field">
          <%= f.label :description %>
          <%= f.text_area :description, id: :tema_description, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit %>
        </div>

      <% end %>

    <%= link_to 'Back', @tema ,class: "btn btn-info"%>
  </div>
</div>
