<p id="notice"><%= notice %></p>

<h1>Coments</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Content</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coments.each do |coment| %>
      <tr>
        <td><%= coment.date %></td>
        <td><%= coment.content %></td>
        <td><%= coment.post.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
